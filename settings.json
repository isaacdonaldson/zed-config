// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  // Show first window draw time and FPS
  "performance": {
    "show_in_status_bar": false
  },
  // Vim emulation mode
  "vim_mode": true,
  // Cursor stays solid
  "cursor_blink": false,
  // Hide scrollbar
  "scrollbar": {
    "show": "never"
  },
  // Whether or not AI suggestions are shown
  "show_inline_completions": false,
  // Editor theme: Myricle is custom
  "theme": "Myricle",
  "indent_guides": {
    "enabled": true,
    "line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  // Line wrapping
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Fonts
  "ui_font_size": 14,
  "ui_font_family": "Berkeley Mono Variable",
  "buffer_font_family": "Berkeley Mono Variable",
  "buffer_font_fallbacks": ["Berkeley Mono", "JetBrains Mono NL"],
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    "dlig": false,
    "ss02": true,
    "zero": true
  },
  "buffer_line_height": {
    "custom": 1.3
  },
  // File Tree
  "project_panel": {
    "dock": "left"
  },
  // Terminal
  "terminal": {
    "dock": "bottom",
    "font_family": "Berkeley Mono Variable",
    "font_size": 14,
    "line_height": "standard",
    "option_as_meta": true,
    "working_directory": "current_project_directory",
    "toolbar": {
      "title": false
    }
  },
  // Git Blame
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  // Tabs
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false
  },
  // Formatting
  "format_on_save": "on",
  // Autoclose brackets and quotations when typing a single one
  "use_autoclose": false,
  // Language Overrides
  "languages": {
    "CSS": {
      "show_inline_completions": true
    },
    "TypeScript": {
      "format_on_save": "off",
      "show_inline_completions": true
    },
    "Lua": {
      "show_inline_completions": true,
      "tab_size": 2
    },
    "Zig": {
      "show_inline_completions": true
    },
    "Go": {
      "show_inline_completions": true
    },
    "HTML": {
      "format_on_save": "off"
    },
    "CSS": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "SCSS": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "Ruby": {
      "format_on_save": "on",
      "show_inline_completions": true,
      "tab_size": 2
    },
    "JavaScript": {
      "format_on_save": "off",
      "show_inline_completions": false
    }
  },
  // LSP
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "formatting": true
      }
    }
  }
}
